<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Register">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Registration"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="#B80906"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="5dp"
            android:text="@string/username"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/reg_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="18dp"

            />
        <TextView
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="5dp"
            android:text="@string/password"
            android:textSize="18dp"

            />

        <EditText
            android:id="@+id/reg_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="18dp"

            />

        <TextView
            android:id="@+id/l3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="5dp"
            android:text="@string/conform_pasword"
            android:textSize="18dp"

            />

        <EditText
            android:id="@+id/reg_pass2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="18dp"

            />

        <TextView
            android:id="@+id/l4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="5dp"
            android:text="@string/pername"

            android:textSize="18dp" />

        <EditText
            android:id="@+id/reg_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="18dp"

            />

        <TextView
            android:id="@+id/l5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="@string/email"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/reg_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="18dp" />

        <Button
            android:id="@+id/reg_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/box_8"
            android:padding="10dp"
            android:text="@string/register"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="18dp" />

            <Button
                android:id="@+id/reg_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/box_1"
                android:padding="10dp"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18dp" />

    </LinearLayout>
</LinearLayout>